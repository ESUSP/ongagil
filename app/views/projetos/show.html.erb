
<br>
  
  
<ol class="breadcrumb">
  <li>
  <%= link_to 'Projetos', projetos_path, class:"btn btn-link" %>
  </li>  
  <li class="active"><%= @projeto.Projeto %></li>
</ol>
  
  
<div class="container">
  
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4">
    <p><%= @projeto.DescricaoProjeto %></p>
    <h4>
      Status:
      <%= @projeto.Status %>
    </h4>
    <h4>
        Tipo: <%= @projeto.Tipo %>      
    </h4>
    <h4>
      Área: <%= @projeto.Area %>
    </h4>
    <h4>
      Início: <%= @projeto.DataInicio.strftime("%d/%m/%y") %>      
    </h4>
    <h4>
      Término: <%= @projeto.DataFim.strftime("%d/%m/%y") %>       
    </h4>
    <hr>
    <h4>
      ONG: <%= @projeto.Ong %>      
    </h4>
    <h4>
      Gestor Responsável: <%= @projeto.RespNome %>
    </h4>
  </div>  
  <div class="col-md-4">
    Atividades:
    <table class="table table-hover">
      <tr>
      <th>Título</th>
      <th>Data</th>
      <th>Status</th>
      </tr>
      <tr>
      <td>Cadastramento</td>
      <td>24/10/2016</td>
      <td>Em andamento</td>
      </tr>
    </table>
    <br>
    Custos (<%= link_to 'Novo Custo', new_custo_path %> ):
    <table class="table table-hover">

  <thead>
    <tr>
      <th>Tipo</th>
      <th>Descrição</th>
      <th>Valor</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @custos.each do |custo| %>
      <tr>
        <td><%= link_to custo.tipo, edit_custo_path(custo) %></td>
        <td><%= custo.descricao %></td>
        <td><%= custo.data %></td>
        <td><%= custo.valor %></td>
        <td><%= link_to 'Excluir', custo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


      
  </div>
  <div class="col-md-4">
    Beneficiários:
    <table class="table table-hover">
      <tr>
      <th>Nome</th>
      <th>Local</th>
      <th>Status</th>
      </tr>
