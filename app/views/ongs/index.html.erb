        <td><%= ong.endereco %></td>
        <td><%= ong.uf %></td>
        <td><%= ong.cidade %></td>
        <td><%= ong.telefone %></td>
        <td><%= ong.email %></td>
        <td><%= ong.site %></td>
        <td><%= ong.cnpj %></td>
        <td><%= ong.tipo %></td>
        <td><%= link_to 'Show', ong %></td>
        <td><%= link_to 'Edit', edit_ong_path(ong) %></td>
        <td><%= link_to 'Destroy', ong, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
