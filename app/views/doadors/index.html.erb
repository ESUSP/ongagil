<%- model_class = Doador -%>

  <div class="page-header">
    <h1>
      Doadores
    </h1>
  </div>
<br>
  <div class="table-responsive">
     <table id="tbldoadors" class="table table-bor table-striped table-hover" cellspacing="0" width="100%">
      <thead>
         <tr>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th>Frequência Contribuição</th>
            <th>Forma Doação</th>
            <th>Data 1a. Doação</th>
            <th colspan="3"></th>
        </tr>
      </thead>

  <tbody>
    <% @doadors.each do |doador| %>
      <tr>
        <td><%= doador.nome %></td>
        <td><%= doador.endereco %></td>
        <td><%= doador.telefone %></td>
        <td><%= doador.frequencia %></td>
        <td><%= doador.forma %></td>
        <td><%= doador.data %></td>
        <td><%= link_to 'Mostrar', doador, class: "btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_doador_path(doador),  class: "btn btn-default" %></td>
        <td><%= link_to 'Deletar', doador,  class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<b><%= link_to 'Novo Doador', new_doador_path %><b>

